<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ComunicateServer</servlet-name>
        <servlet-class>servlets.ComunicateServer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendMessages</servlet-name>
        <servlet-class>servlets.sendMessages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendMessagesToServer</servlet-name>
        <servlet-class>servlets.sendMessages</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComunicateServer</servlet-name>
        <url-pattern>/ComunicateServer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendMessages</servlet-name>
        <url-pattern>/sendMessages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendMessagesToServer</servlet-name>
        <url-pattern>/sendMessagesToServer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
